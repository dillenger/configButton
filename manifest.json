{
  "manifest_version": 2,
  "name": "Config Button",
  "description": "Adds a Config button, opens about:config in a dialog or a tab",
  "homepage_url": "https://addons.thunderbird.net/en-US/thunderbird/addon/config-button/",
  "version": "2.1",
  "experiment_apis": {
    "configButtonApi": {
      "schema": "schema.json",
      "parent": {
        "scopes": [
          "addon_parent"
        ],
        "paths": [
          [
            "configButtonApi"
          ]
        ],
        "script": "implementation.js"
      }
    }
  },
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "browser_action": {
    "default_title": "Config Editor",
    "default_label": "Config",
    "default_icon": "configButton.svg",
    "allowed_spaces": []
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "configButton@dillinger",
      "strict_min_version": "111.0",
      "strict_max_version": "128.*"
    }
  },
  "icons": {
    "32": "configButton.svg",
    "64": "configButton.svg"
  }
}
